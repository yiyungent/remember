@using WebUI.Areas.Admin.Models.Common
@using Domain.Entities
@{
	Layout = null;

	AdminWebBaseInfoViewModel baseInfo = ViewBag.AdminWebBaseInfo;
	UserInfo currentUserInfo = ViewBag.CurrentUserInfo;
}

<header class="main-header">
	<!-- Logo -->
	<a href="/" class="logo">
		<!-- mini logo for sidebar mini 50x50 pixels -->
		<span class="logo-mini">@Html.Raw(baseInfo.Logo_mini)</span>
		<!-- logo for regular state and mobile devices -->
		<span class="logo-lg">@Html.Raw(baseInfo.Logo_lg)</span>
	</a>
	<!-- Header Navbar -->
	<nav class="navbar navbar-static-top" role="navigation">
		<!-- Sidebar toggle button-->
		<a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
			<span class="sr-only">Toggle navigation</span>
		</a>
		<!-- Navbar Right Menu -->
		<div class="navbar-custom-menu">
			<ul class="nav navbar-nav">
				<!-- User Account Menu -->
				<li class="dropdown user user-menu">
					<!-- Menu Toggle Button -->
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						<!-- The user image in the navbar-->
						<img src="@currentUserInfo.Avatar" class="user-image" alt="User Image">
						<!-- hidden-xs hides the username on small devices so only the image appears. -->
						<span class="hidden-xs">@currentUserInfo.UserName</span>
					</a>
					<ul class="dropdown-menu">
						<!-- The user image in the menu -->
						<li class="user-header">
							<img src="@currentUserInfo.Avatar" class="img-circle" alt="User Image">
							<p>
								@currentUserInfo.UserName - @currentUserInfo.RoleInfos.FirstOrDefault().Name
								<small>加入自 @currentUserInfo.CreateTime.ToString("yyyy-MM-dd")</small>
							</p>
						</li>
						<!-- Menu Body -->
						<li class="user-body">
							<div class="row">
								<div class="col-xs-4 text-center">
									<a href="#">粉丝</a>
								</div>
								<div class="col-xs-4 text-center">
									<a href="#">关注</a>
								</div>
								<div class="col-xs-4 text-center">
									<a href="#">消息</a>
								</div>
							</div>
							<!-- /.row -->
						</li>
						<!-- Menu Footer-->
						<li class="user-footer">
							<div class="pull-left">
								<a href="@Url.Action("Index", "Profile", new { area = "Account", userName = currentUserInfo.UserName })" class="btn btn-default btn-flat" target="_blank">个人中心</a>
							</div>
							<div class="pull-right">
								<a href="@Url.Action("Exit", "Login", new { area = "Account", returnUrl = Url.Action("Index", "Login", new { area = "Account" }) })" class="btn btn-default btn-flat">退出</a>
							</div>
						</li>
					</ul>
				</li>
				<!-- Control Sidebar Toggle Button -->
				<li>
					<a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
				</li>
			</ul>
		</div>
	</nav>
</header>
