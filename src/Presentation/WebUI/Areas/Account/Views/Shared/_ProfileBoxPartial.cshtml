@using Domain.Entities
@using Framework.Extensions
@model UserInfo
@{
	Layout = null;

	string roleName = Model.RoleInfos.FirstOrDefault() == null ? "" : Model.RoleInfos.FirstOrDefault().Name;
}


<div id="js-profileBox" class="box box-primary">
	<div class="box-body box-profile">
		<img class="profile-user-img img-responsive img-circle" src="@Model.Avatar" alt="@Model.UserName">

		<h3 class="profile-username text-center">@Model.UserName</h3>

		<p class="text-muted text-center">@roleName</p>

		<ul class="list-group list-group-unbordered">
			<li class="list-group-item">
				<b>粉丝</b> <a class="pull-right">1,322</a>
			</li>
			<li class="list-group-item">
				<b>关注</b> <a class="pull-right">543</a>
			</li>
			<li class="list-group-item">
				<b>积分</b> <a class="pull-right">@Model.Credit</a>
			</li>
		</ul>

		<a href="#" class="btn btn-primary btn-block"><b>关注</b></a>
	</div>
	<!-- /.box-body -->
	<!-- Loading (remove the following to stop the loading)-->
	<div class="js-loading overlay" style="display: none;">
		<i class="fa fa-refresh fa-spin"></i>
	</div>
	<!-- end loading -->
</div>
