    <security>
      <requestFiltering>
        <!-- 上传文件大小限制 -->
        <requestLimits maxAllowedContentLength="2147483647"></requestLimits>
      </requestFiltering>
    </security>
    <handlers>



      <!-- 集成模式 -->

      <!-- start 伪静态设置 -->
